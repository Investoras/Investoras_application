@page "/Main"
@using System.Globalization;
@using ChartJs.Blazor.PieChart;
@using System.Drawing;
@using ChartJs.Blazor.Util

<div class="app-container">
    <div class="layout-columns">
        <!-- Left -->
        <div class="column-left">
            <button class="add-button full-width mb-50" @onclick="ShowAddTransactionModal">
                Добавить запись
            </button>

            <div class="summary-card income">
                <h3>Сводка (Доходы)</h3>
                <p class="amount">@TotalIncome.ToString("C", CultureInfo.CurrentCulture)</p>
            </div>

            <div class="summary-card expense">
                <h3>Сводка (Расходы)</h3>
                <p class="amount">@TotalExpense.ToString("C", CultureInfo.CurrentCulture)</p>
            </div>

            <div class="summary-card balance">
                <h3>Сводка (Баланс)</h3>
                <p class="amount">@Balance.ToString("C", CultureInfo.CurrentCulture)</p>
            </div>
        </div>

        <!-- Center -->
        <div class="column-content">
            <h1 class="app-title text-center">Ваша статистика</h1>

            <div class="chart-section">
                <div class="date-navigator">
                    <button @onclick="PreviousMonth">◀</button>
                    <span>@SelectedMonthName @SelectedYear</span>
                    <button @onclick="NextMonth">▶</button>
                </div>

                <div class="text-center">
                    <div class="radio-group">
                        <input type="radio" id="income" name="graph_type" value="income"
                               checked="@isIncomeSelected"
                               @onchange="@(() => RadioInputChanged(true))" />
                        <label for="income">Доходы</label>
                    </div>

                    <div class="radio-group">
                        <input type="radio" id="expense" name="graph_type" value="expense"
                               checked="@(!isIncomeSelected)"
                               @onchange="@(() => RadioInputChanged(false))" />
                        <label for="expense">Расходы</label>
                    </div>
                </div>

                <div class="chart-container">
                    @if (_pieConfig != null)
                    {
                        <Chart Width="400" Height="200" Config="_pieConfig" @ref="_pieChart" />
                    }
                    else if (!HasChartData)
                    {
                        <p class="text-center">Нет данных для отображения за выбранную дату.</p>
                    }
                    else
                    {
                        <p class="text-center">Загрузка...</p>
                        <canvas style="width: 100%; height: auto;"></canvas>
                    }
                </div>
            </div>
        </div>

        <!-- Right -->
        <div class="column-right">
            <div class="user-info text-center">
                @if (AuthService.Username != null)
                {
                    <span class="username">Добро пожаловать, @AuthService.Username!</span>
                }
                else
                {
                    <span class="username">Добро пожаловать, гость!</span>
                }
            </div>

            <div class="transactions-section">
                <div class="recent-transactions">
                    <h2>Список последних транзакций</h2>
                    <ul class="transaction-list">
                        @foreach (var transaction in RecentTransactions)
                        {
                            <li class="transaction-item @(transaction.IsIncome ? "income" : "expense")">
                                <span class="description">@transaction.Description</span>
                                <span class="amount">@transaction.Amount.ToString("C", CultureInfo.CurrentCulture)</span>
                                <span class="date">@transaction.Date.ToShortDateString()</span>
                            </li>
                        }
                    </ul>
                </div>

                <div class="full-history">
                    <a class="btn btn-primary full-width" href="/Transactions">История транзакций</a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (showAddModal)
{
    <div class="modal">
        <div class="modal-content">
            <h3>Добавить новую транзакцию</h3>

            <EditForm Model="newTransaction" OnValidSubmit="AddTransaction">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group">
                    <label>Тип:</label>
                    <select @onchange="OnTransactionTypeChanged">
                        <option value="" selected>Выберите тип транзакции</option>
                        <option value="income">Доход</option>
                        <option value="expense">Расход</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Категория:</label>
                    <select @bind="newTransaction.CategoryId" disabled="@(string.IsNullOrEmpty(selectedTransactionType))">
                        <option value="" selected>Выберите категорию</option>
                        @foreach (var category in filteredCategories)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Счет:</label>
                    <select @bind="newTransaction.AccountId">
                        <option value="" selected>Выберите счет</option>
                        @foreach (var account in accounts)
                        {
                            <option value="@account.AccountId">@account.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>Сумма:</label>
                    <input type="number" @bind="newTransaction.Amount" />
                </div>

                <div class="form-group">
                    <label>Дата:</label>
                    <input type="date" @bind="newTransaction.Date" />
                </div>

                <div class="form-group">
                    <label>Описание:</label>
                    <input type="text" @bind="newTransaction.Description" />
                </div>

                <div class="modal-actions">
                    <button type="submit" class="btn btn-primary">Добавить</button>
                    <button type="button" class="btn btn-secondary" @onclick="HideAddTransactionModal">Отмена</button>
                </div>
            </EditForm>
        </div>
    </div>
}

