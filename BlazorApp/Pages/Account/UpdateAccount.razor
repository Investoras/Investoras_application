@page "/accounts/Updateaccount/{Id:int}"


<div class="row">
	<div class="col-lg-8">
		<h1 class="mb-5">Обновить</h1>

		<EditForm Model="AccountData" OnValidSubmit="SaveAccount">
            <DataAnnotationsValidator />

            <div class="row mb-3">
                <label class="col-md-4 col-form-label">Название</label>
                <div class="col-md-8">
					<InputText class="form-control" @bind-Value="AccountData.Name" />
					<ValidationMessage For="@(() => AccountData.Name)" />
                </div>
            </div>

			<div class="row mb-3">
				<label class="col-md-4 col-form-label">Баланс</label>
				<div class="col-md-8">
					<InputNumber class="form-control" @bind-Value="AccountData.Balance" />
					<ValidationMessage For="@(() => AccountData.Balance)" />
				</div>
			</div>

            @if (ServerErrors?.Count > 0)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ServerErrors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <div class="row">
                <div class="offset-md-4 col-md-4 d-grid">
                    <button type="submit" class="btn btn-primary">Обновить</button>
                </div>
                <div class="col-md-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Accounts">Отмена</a>
                </div>
            </div>
        </EditForm>
	</div>
</div>
