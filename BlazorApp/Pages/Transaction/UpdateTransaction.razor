@page "/Transactions/UpdateTransaction/{Id:int}"
@using System.ComponentModel.DataAnnotations


<EditForm Model="TransactionData" OnValidSubmit="SaveTransaction">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="col-lg-8">
            <h1 class="mb-5">Update</h1>

            @if (IsLoading)
            {
                <p><em>Loading...</em></p>
            }
            else if (TransactionData != null)
            {
                <div class="row mb-3">
                    <label class="col-md-4 col-form-label">Amount</label>
                    <div class="col-md-8">
                        <InputNumber class="form-control" @bind-Value="TransactionData.Amount" />
                        <ValidationMessage For="@(() => TransactionData.Amount)" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-form-label">Description</label>
                    <div class="col-md-8">
                        <InputText class="form-control" @bind-Value="TransactionData.Description" />
                        <ValidationMessage For="@(() => TransactionData.Description)" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-form-label">AccountId</label>
                    <div class="col-md-8">
                        <InputNumber class="form-control" @bind-Value="TransactionData.AccountId" />
                        <ValidationMessage For="@(() => TransactionData.AccountId)" />
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-md-4 col-form-label">CategoryId</label>
                    <div class="col-md-8">
                        <InputNumber class="form-control" @bind-Value="TransactionData.CategoryId" />
                        <ValidationMessage For="@(() => TransactionData.CategoryId)" />
                    </div>
                </div>

                @if (ServerErrors?.Count > 0)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in ServerErrors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="row">
                    <div class="offset-md-4 col-md-4 d-grid">
                        <button class="btn btn-primary" type="submit" disabled="@IsSubmitting">Submit</button>
                    </div>
                    <div class="col-md-4 d-grid">
                        <a class="btn btn-outline-primary" href="/Transactions">Cancel</a>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger">Transaction not found.</div>
            }
        </div>
    </div>
</EditForm>
